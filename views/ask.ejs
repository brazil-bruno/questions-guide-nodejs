<%- include('partials/header.ejs') %>
<body>
  <%- include('partials/navbar.ejs') %>
  <div class="container">
    <hr />
    <h1><%= ask.title %></h1>
    <p><%= ask.description %></p>
    <hr />
    <form method="post" action="/answer">
      <h3>Reply</h3>
      <label>Answer:</label>
      <textarea
        placeholder="Enter your answer!"
        class="form-control"
        name="bodyAnswer"
      ></textarea>
      <br />
      <input type="hidden" name="ask" value="<%= ask.id %>">
      <button class="btn btn-primary" type="submit">Answer</button>
    </form>
    <hr>
    <h3>Answers</h3>
    <hr>
    <% answers.forEach(answer => { %>
      <br>
      <div class="card">
        <div class="card-body">
          <p><%= answer.bodyAnswer %></p>
        </div>
      </div>
    <% }) %>
  </div>
</body>

<%- include('partials/footer.ejs') %>
